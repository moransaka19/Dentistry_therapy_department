@model IEnumerable<Dentistry.Models.ProcedureViewModel>

@{
    ViewData["Title"] = "Procedures";
}

<h1>Procedures</h1>

<input class="form-control" />
<button onclick="if (!window.find(this.previousElementSibling.value, false, false, false, false, false)) window.getSelection().empty()">Find next</button>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Procedure name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProcedureId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProcedureId })
                </td>
            </tr>
        }
    </tbody>
</table>
